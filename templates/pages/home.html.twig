{% extends "base.html.twig" %}
{% block title %}Home - Symrecipe{% endblock %}
{% block body %}
	<body>
		<div class="container pt-5">
			<div class="row my-5">
				<div class="col-xl-7">
					<img src="../images/vegetables.jpg" class="img-fluid">
				</div>
				<div class="col-xl-5 p-2">
					<h3 class="mb-5 text-primary">Welcome !</h3>
					<h5 class="lh-lg">
						<strong>Symrecipe</strong>
						is an application that will allow you to
						<strong>create recipes</strong>
						based on ingredients that you will have created yourself. 
						You will be able
						<strong>share</strong>
						your recipes
						<strong>community</strong>
						site, or keep them private.<br><br>Meet on the
						<strong>registration page</strong>
						to use the app.
					</h5>
					<p class="lead">
						<div class="d-flex justify-content-end">
							<a class="btn btn-primary" href="{{ path("security.registration") }}" role="button">Sign Up</a>
						</div>
					</p>
				</div>
			</div>
			<div class="recipes">
					<h2 class="my-5 text-center">Community recipes</h2>
					<div class="d-flex justify-content-between">
						{% for recipe in recipes %}
							<div class="card border-primary m-3 mb-3" style="max-width: 20rem;">
								<div class="card-header">#{{ recipe.id }}</div>
								{% if recipe.imageName %}
								<img style="width: 100%; height:200px;" src="{{ vich_uploader_asset(recipe, 'imageFile') }}">
								{% else %}
									<svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
										<rect width="100%" height="100%" fill="#868e96"></rect>
										<text x="50%" y="50%" fill="#dee2e6" dy=".3em">No image</text>
									</svg>
								{% endif %}
								<div class="card-body">
									<h4 class="card-title">{{ recipe.name }}</h4>
									<p class="card-text">{{ recipe.description|slice(0,100)~ '...' }}</p>
								</div>
								<p class="lead">
									<div class="d-flex justify-content-center">
										<a class="btn btn-primary" href="{{ path('recipe.show', {'id': recipe.id}) }}" role="button"><i class="fa-solid fa-plus"></i></a>
									</div>
								</p>
							</div>
						{% endfor %}
					</div>
					<p class="lead">
						<div class="d-flex justify-content-center">
							<a class="btn btn-primary" href="{{ path("recipe.community") }}" role="button">See all</a>
						</div>
					</p>
				</div>
			</div>
		</div>
	</body>
{% endblock %}

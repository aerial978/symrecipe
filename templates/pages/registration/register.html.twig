{% extends 'base.html.twig' %}

{% block title %}Registration - Symrecipe{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4">Register</h1>
		{% for flash_error in app.flashes('verify_email_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}
        <div class="alert-info p-4">
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.fullName) }}
            {{ form_row(registrationForm.pseudo) }}
            {{ form_row(registrationForm.email, { attr:{'placeholder':'example@symrecipe.com'} }) }}
            {{ form_row(registrationForm.plainPassword) }}
            {{ form_row(registrationForm.agreeTerms, { attr:{'class':'mt-4'} }) }}

            <button type="submit" class="btn btn-primary mt-4">Register</button>
            {{ form_end(registrationForm) }}
        </div>
	</div>
{% endblock %}
